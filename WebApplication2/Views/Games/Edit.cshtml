@model WebApplication2.Models.Game

@{
    ViewBag.Title = "Edit";
}

@Scripts.Render("~/Scripts/jquery-3.3.1.js")

<style>
    textarea {
        width: 300px;
        height: 150px;  
    }
    .pero {
        margin-left: 5px
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h3>@Model.Ime - Уреди</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label col-md-2">Слика</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Slika, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Slika, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Име</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Опис</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Оцена</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ocena, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ocena, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />

    <div class="form-group">
        <label class="control-label col-md-2">Рецензија</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Recenz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Recenz, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Постер Слика</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Poster, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Poster, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Gameplay Слика</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GameplaySlika, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GameplaySlika, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Уреди" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div class="col-md-offset-2">
    @Html.ActionLink("Не менувај", "Index", new object { }, new { @class = "btn btn-default pero" })
</div>

<script>

</script>

