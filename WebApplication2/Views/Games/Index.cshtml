@model IEnumerable<WebApplication2.Models.Game>

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/Scripts/jquery-3.3.1.js")

<style>
    a:link {color: darkred;text-decoration:none}
    a:visited {color: darkred;text-decoration:none}
    a:hover {color:darkred;text-decoration:none}
    a:active {color:darkred;text-decoration:none}
    a {text-decoration:none;}

    .circle {
        border: 2px solid red;
        height: 60px;
        border-radius: 50%;
        width: 60px;
    }
    img:hover{opacity:0.7;}

    #scroll {
        position: fixed;
        right: 10px;
        bottom: 10px;
        cursor: pointer;
        width: 50px;
        height: 50px;
        background-color: red;
        text-indent: -9999px;
        display: none;
        -webkit-border-radius: 60px;
        -moz-border-radius: 60px;
        border-radius: 60px
    }

        #scroll span {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-left: -8px;
            margin-top: -12px;
            height: 0;
            width: 0;
            border: 8px solid transparent;
            border-bottom-color: #ffffff;
        }

        #scroll:hover {
            background-color: orange;
            opacity: 1;
            filter: "alpha(opacity=100)";
            -ms-filter: "alpha(opacity=100)";
        }
    .rec {
        display: block;
        height: 100%;
        width: 100%;
        text-decoration: none;
    }

</style>

@if (User.Identity.IsAuthenticated)
{
<p class="btn btn-default" style="font-size:20px;background: linear-gradient(lightgreen,lawngreen);">
    @Html.ActionLink("Додади Видео Игра", "Create")
</p>
}
<br /><br />


<div style="width:1000px;height:7px;background-color:orange;"></div>
    @foreach (var item in Model.Reverse())
    {
        <div class="golemoto" style="background-color:rgba(0, 0, 0, 0.5);width:1000px;height:211px;border-left:5px solid orange;border-right:5px solid orange">
            <div style="display:inline;position:absolute;width:1000px;height:210px;">@Html.ActionLink(" ", "Recenzii", new { id = item.Id }, new { @class = "rec" })</div>

            <div style="display:inline-block;position:relative;left:10px;margin-top:5px">
                <a href="@Url.Action("Recenzii",new { id = item.Id })">
                <img src="@item.Slika" style="max-width:300px;max-height:200px;border:2px solid red;display:inline-block" alt="Не Внесовте Слика" />
                </a>
            </div>

            <div style="display:inline-block;">

                <div style="display:inline-block;padding-left:25px;">

                    <p class="ime" style="font-weight:bold;font-size:27px;color:black">
                        @Html.DisplayFor(modelItem => item.Ime)
                    </p>

                    <br />
                    <p style="font-size:17px;color:black;width:600px">
                        @Html.DisplayFor(modelItem => item.Opis)
                    </p>
                </div>



                <div style="padding-right:45px;display:inline;color:white;position:absolute;left:980px;margin-top:50px">
                    <p class="circle ocenata" style="background:#696969;text-align:center;font-size:40px">
                        @Html.DisplayFor(modelItem => item.Ocena)
                    </p>
                    <p style="font-size:20px;position:relative;text-align:center" class="dodatok">
                        Додаток
                    </p>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div style="position:absolute;left:1113px;">
                        <p class="btn btn-default" style="font-size:20px;background: linear-gradient(lightgreen,lawngreen);width:110px">
                            @Html.ActionLink("Уреди", "Edit", new { id = item.Id })
                        </p><br />
                        <p class="btn btn-default" style="font-size:20px;background: linear-gradient(lightgreen,lawngreen);width:110px">
                            @Html.ActionLink("Избриши", "Delete", new { id = item.Id })
                        </p>
                    </div>
                }

            </div>

        </div>
        <div style="width:1000px;height:7px;background-color:orange;"></div>

    
    }

<a href="#" id="scroll" style="display: none;"><span></span></a>


    <script>
        var x = document.getElementsByClassName("ocenata");
        var y = document.getElementsByClassName("dodatok");

        $(function () {
            $(".dodatok").hover(function () {
                $(this).css("color", "orange");
            }, function () {
                $(this).css("color", "white");
            });

            for (i = 0; i < x.length; i++) {
                if (x[i].innerHTML == 1) {
                    x[i].style.color = "black";
                    y[i].innerHTML = "Абизмална";
                    y[i].classList.add("eden");
                    $(".eden").css("right", "19px");
                }
                if (x[i].innerHTML == 2) {
                    x[i].style.color = "red";
                    y[i].innerHTML = "Ужасна";
                    y[i].classList.add("dva");
                    $(".dva").css("right", "2px");
                }
                if (x[i].innerHTML == 3) {
                    x[i].style.color = "red";
                    y[i].innerHTML = "Лоша";
                    y[i].classList.add("tri");
                    $(".tri").css("right", "0px");
                }
                if (x[i].innerHTML == 4) {
                    x[i].style.color = "red";
                    y[i].innerHTML = "Проста";
                    y[i].classList.add("cetiri");
                    $(".cetiri").css("right", "2px");
                }
                if (x[i].innerHTML == 5) {
                    x[i].style.color = "yellowgreen";
                    y[i].innerHTML = "Просечна";
                    y[i].classList.add("pet");
                    $(".pet").css("right", "11px");
                }
                if (x[i].innerHTML == 6) {
                    x[i].style.color = "#00B800";
                    y[i].innerHTML = "Пријатна";
                    y[i].classList.add("shest");
                    $(".shest").css("right", "8px");
                }
                if (x[i].innerHTML == 7) {
                    x[i].style.color = "#00B800";
                    y[i].innerHTML = "Добра";
                    y[i].classList.add("sedum");
                    $(".sedum").css("left", "1px");
                }
                if (x[i].innerHTML == 8) {
                    x[i].style.color = "#00B800";
                    y[i].innerHTML = "Одлична";
                    y[i].classList.add("osum");
                    $(".osum").css("right", "9px");
                }
                if (x[i].innerHTML == 9) {
                    x[i].style.color = "#00B800";
                    y[i].innerHTML = "Извонредна";
                    y[i].classList.add("devet");
                    $(".devet").css("right", "20px");
                }
                if (x[i].innerHTML == 10) {
                    x[i].style.color = "#FFD700";
                    y[i].innerHTML = "Неопходна";
                    y[i].classList.add("deset");
                    $(".deset").css("right", "17px");
                }
            }
        });

        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop() > 100) {
                    $('#scroll').fadeIn();
                } else {
                    $('#scroll').fadeOut();
                }
            });
            $('#scroll').click(function () {
                $("html, body").animate({ scrollTop: 0 }, 600);
                return false;
            });
        });


    </script>
