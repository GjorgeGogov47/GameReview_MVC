<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #logoto {
            height: 90px;
            width: 196px;
            background: url('../../Sliki/Screenshot_2.png');
        }

        #logoto:hover {
            height: 90px;
            width: 196px;
            background: url('../../Sliki/Screenshot_2 - Copy.png');
           
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background: rgba(255,255,255,1)">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index","Home")"><div id="logoto"></div></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="btn btn-default" style="margin-top:15px;padding:5px;margin-left:30px;font-size:20px;background: linear-gradient(white,lightgrey);">@Html.ActionLink("Игри", "Index", "Games")</li>
                    <li class="btn btn-default" style="margin-top:15px;padding:5px;margin-left:25px;font-size:20px;background: linear-gradient(white,lightgrey)">@Html.ActionLink("Новости", "Index", "Novosts")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="btn btn-default" style="margin-top:15px;padding:5px;margin-left:25px;font-size:20px;background: linear-gradient(white,lightgrey)">@Html.ActionLink("Додади корисник", "Register", "Account")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <hr />
        <hr />
        @RenderBody()
        <hr />
    </div>
    <footer style="background-color:grey;width:100%;text-align:center">
        <p style="color:azure;font-size:20px">163136 - Ѓорге Гогов</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
